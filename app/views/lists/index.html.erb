<%= render 'navbar' %>

<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.francetvinfo.fr/pictures/eefokwbLyOYWVqlfhDYULhBN22A/1500x843/2017/03/06/php0xtSOR_1.jpg);">
  <div class="container ">
    <h1>Save any king of movies</h1>
    <p>Your favorites !</p>
  </div>
</div>

<div class='container'>
  <div class='d-flex justify-content-end'>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-primary mb-1" %>
  </div>
  <h1>My lists</h1>
  <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
           <%= link_to (list.name), list_path(list.id) %>
        </div>
      <% end %>
  </div>
</div>
